              <div class="bg-neutral text-neutral-content w-12 rounded-full">
                <span><%= post_template.user.nickname_initial %></span>
              </div>
            </div>
            <div class="flex flex-col ps-3">
              <p>by <%= "@#{post_template.user.nickname}" %></p>
              <p><%= post_template.created_at.strftime("%Yå¹´%mæœˆ%dæ—¥") %></p>
            </div>
          </div>
          <div class="ms-12">
            <h2 class="card-title"><%= link_to post_template.title, post_template_path(post_template), class: "hover:underline after:absolute after:inset-0 mb-2" %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>