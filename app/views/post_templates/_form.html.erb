<%= form_with model: post_template do |form| %>
  <%= form.label :title, class: "input input-bordered flex items-center gap-2 mb-5" do %>
    <%= form.text_field :title, class: "grow", placeholder: "テンプレートのタイトルを入力してください" %>
  <% end %>
  <div class="bg-blue-100 text-blue-700 px-4 py-3 mb-2" role="alert">
    <p class="text-sm">テンプレートの本文に#{user_name}と書くとテンプレートを使用するとき各ユーザーの名前に置き換わります</p>
  </div>
  <%= form.text_area :content, class: "textarea textarea-bordered w-full field-size-content min-h-80", placeholder: "テンプレートの本文を入力してください" %>
  <div class="flex items-center justify-between">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>